                            BorderThickness="{TemplateBinding BorderThickness}" Background="#FF3BB1FD"/>
                        <ContentPresenter   Cursor="{TemplateBinding Cursor}" Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
