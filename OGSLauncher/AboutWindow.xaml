<Window x:Class="DaramTorrent.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="이 프로그램에 대하여" Height="180" Width="300" ShowInTaskbar="False"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>

        <TextBlock Text="Daram Torrent" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Right">
            <TextBlock Text="Version: 1.000" />
        </StackPanel>
        <Button Content="확인" Grid.Row="2" Click="Button_Click" />
    </Grid>
</Window>